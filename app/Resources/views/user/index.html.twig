{% extends '::base.html.twig' %}

{% block body %}
    <table>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.getEmail() }}</td>
                <td>{{ user.getPassword() }}</td>
                <td>{{ user.getUsername() }}</td>
                <td>{{ user.getCreatedAt() | date("m/d/Y") }}</td>
                <td>{{ user.getUpdatedAt() | date("m/d/Y") }}</td>
                <td><a href="{{ path('app_user_update', {'id':user.id}) }}">Update</a></td>
                <td><a href="{{ path('app_user_remove', {'id':user.id}) }}">Remove</a></td>
                <td><a href="{{ path('app_user_insert') }}">New User</a></td>
            </tr>
        {% endfor %}
    </table>


{% endblock %}